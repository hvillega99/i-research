<!DOCTYPE html>
<html lang="es">
<head>
    <%- include("templates/cabecera.templates.ejs")%>
    <link rel="stylesheet" type="text/css" href="/css/resultados.css">
    <link rel="stylesheet" type="text/css" href="/css/navbar2.css">
    <title>Resultados de búsqueda</title>

</head>
<body>
    <%- include("templates/navbar_results.templates.ejs")%>
    <main>

        <div class="container">
            <div class="row align-items-start">
                <div class="col-md-1 order-1">
                    <% if(totalSug>0){ %>
                        <div class="text_results text-start">
                            <h5 style="display:inline" data-value="Temas sugeridos:">Temas sugeridos:</h5> 
                            <div class="mt-2 d-flex flex-wrap justify-content-start">
                                <% temas_sugeridos.forEach(tema => { %>
                                    <p><a href="#" onclick="holaf('<%= tema %>')" class="link-perfil mx-2"> <%= tema %> </a></p>  
                                <% }) %>
                            </div>
                        </div>
                    <% } %>
                </div>
                <div class="col-md-11">
                    
                    <% if(total>0){ %>
                        <div class="text_results">
                            <h3 style="display:inline">
                                <%= total %>
                            </h3>
                            <h3 style="display:inline" data-value="resultado(s) de búsqueda para">
                                resultado(s) de búsqueda para
                            </h3> 
                            <h3 style="display:inline">
                                <%= terminos %>:
                            </h3>
                        </div>

                        <div class="d-flex flex-wrap">

                            <% investigadores.forEach(resultado => { %>
    
                                <div class="card m-4" style="width: 280px; height: 150px;">
                                    <div class="card-body">
                                        <div class="row align-items-center">
                                            <div class="col-5">
                                                <img src="<%= resultado.srcFoto %>" class="rounded img-fluid" style="object-fit: contain" >
                                            </div>
                                            <div class="col-7 text-start">
                                                <a href="/investigador/<%= resultado.scopusId %>" class="link-perfil">
                                                    <strong><%= resultado.name %></strong>
                                                </a>
                                                <h6 data-value="Investigador">Investigador</h6>
                                                <p><%= resultado.afiliaciones %></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            
                            <% }) %>
                            <% facultades.forEach(facultad => { %>
        
                                <div class="card m-4" style="width: 280px; height: 150px;">
                                    <div class="card-body">
                                        <div class="row align-items-center">
                                            <div class="col-6">
                                                <img src="<%= facultad.logo %>" class="rounded img-fluid" style="object-fit: contain" >
                                            </div>
                                            <div class="col-6 text-start">
                                                <a href="/unidad/<%= facultad.nombre %>" class="link-perfil">
                                                    <strong><%= facultad.nombre %></strong>
                                                </a>
                                                <h6 data-value="Unidad académica">Unidad académica</h6>
                                            </div>
                                        </div>
                                    </div>
        
                                </div>
                            
                            <% }) %>
        
                            <% centros.forEach(centro => { %>
        
                                <div class="card m-4" style="width: 280px; height: 150px;">
                                    <div class="card-body">
                                        <div class="row align-items-center">
                                            <div class="col-6">
                                                <img src="<%= centro.logo %>" class="rounded img-fluid" style="object-fit: contain" >
                                            </div>
                                            <div class="col-6 text-start">
                                                <a href="/centro/<%= centro.nombre %>" class="link-perfil">
                                                    <strong><%= centro.nombre %></strong>
                                                </a>
                                                <h6 data-value="Centro de investigación">Centro de investigación</h6>
                                            </div>
                                        </div>
                                    </div>
        
                                </div>
                            
                            <% }) %>
                        </div>

    
                    <% } %>
            
                    <% if(totalKw>0){ %>
                        <div class="text_results">
                            <h3 style="display:inline">
                                <%= totalKw %> 
                            </h3>
                            <h3 style="display:inline" data-value="investigador(es) trabajan sobre">
                                investigador(es) trabajan sobre
                            </h3> 
                            <h3 style="display:inline">
                                <%= terminos %>:
                            </h3>
                        </div>
                        
                        <div class="d-flex flex-wrap" id="resultados">

                            <% autoresKw.forEach(autor => { %>
        
                                <div class="card m-4" style="width: 280px; height: 150px;">
                                    <div class="card-body">
                                        <div class="row align-items-center">
                                            <div class="col-5">
                                                <img src="<%= autor.srcFoto %>" class="rounded img-fluid" style="object-fit: contain" >
                                            </div>
                                            <div class="col-7 text-start">
                                                <a href="/investigador/<%= autor.scopusId %>" class="link-perfil">
                                                    <strong><%= autor.name %></strong>
                                                </a>
                                                <h6 data-value="Investigador">Investigador</h6>
                                                <p><%= autor.afiliaciones %></p>
                                            </div>
                                        </div>
                                    </div>
        
                                </div>
                            
                            <% }) %>
                        </div>

                    <% } %>
            
                    <% if(total==0 && totalKw==0){ %>
                        <div class="text_results">
                            <h3 style="display:inline" class="text_results" data-value="No se econtraron resultados para">No se econtraron resultados para</h3> <h3 style="display:inline"><%= terminos %></h3>
                        </div>    
                    <% } %>
                    
                </div>
            </div>
        </div>

    </main>
   
    <%- include("templates/footer.templates.ejs")%>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script>
    <script src="/js/config_lang.js"></script>
    <script src="/js/sugerencias.js"></script>
</body>
</html>