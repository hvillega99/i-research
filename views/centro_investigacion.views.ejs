<!DOCTYPE html>
<html lang="es">
<head>
    <%- include("templates/cabecera.templates.ejs")%>
    <link rel="stylesheet" type="text/css" href="/css/navbar.css">
    <link rel="stylesheet" type="text/css" href="/css/perfil.css">
    <title>Centro de investigación</title>
</head>
<body>
    <%- include("templates/navbar.templates.ejs", {titulo: "Centro de investigación"})%>
    <main>
        <div id="maincontainer">
            <section class="container p-3">
                <div class="row align-items-center">
                    <div class="col-2">
                        <img src="/img/icono ci.png" class="w-100 h-100">
                    </div>
                    <div class="col-10">
                        <h2 id="uaId"><%= siglas %></h2>
                        <h3><%= nombre %></h3>
                    </div>
                </div>
            </section>

            <div class="division"></div>

            <section class="container p-3">
                <div class="row"> 
                    <div class="col-md-2">
                        <h5>Métricas</h5>
                        <h5><%= totalInvestigadores %></h5>
                        <p>Investigadores</p>
                        <h5><%= totalPublicaciones %></h5>
                        <p>Publicaciones</p>
                        <h5><%= totalCitaciones %></h5>
                        <p>Citaciones</p>
                    </div>
                    <div class="col-md-5">
                        <canvas id="grafica-citaciones" width="400" height="300">
                        </canvas>
                    </div>
                    <div class="col-md-5">
                        <canvas id="grafica-publicaciones" width="400" height="300">
                        </canvas>
                    </div>
                </div>
            </section>  

            <div class="division"></div>
            
            <section class="container p-3 text-center">

                <h5>Investigadores</h5>

                <div class="row justify-content-center">
                    <div class="col-md-8">

                        <table class="table">
                            <thead>
                              <tr>
                                <th scope="col">#</th>
                                <th scope="col">Autor</th>
                                <th scope="col">Publicaciones</th>
                                <th scope="col">Citaciones</th>
                              </tr>
                            </thead>
                            <tbody>
                                <% i = 0 %>
                                <% investigadores.forEach(item => { %>
                                    <% i++ %>
                                    <tr>
                                        <th scope="row"><%= i %></th>
                                        <td id="<%= item.id %>" class="autor">
                                            <a style="text-decoration: none; color: black;" 
                                            href="/investigador/<%= item.id %>"> 
                                                <%= item.autor %> 
                                            </a>
                                        </td>
                                        <td id="publicaciones-<%= item.id %>">
                                            <%= item.publicaciones %>
                                        </td>
                                        <td id="citaciones-<%= item.id %>">
                                            <%= item.citaciones %>
                                        </td>
                                    </tr>
                                <% }) %>
        
                            </tbody>
                        </table>

                    </div>
                </div>

            </section>
        </div>  
    </main>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
    <script src="/js/graficosUA.js"></script>
</body>
</html>