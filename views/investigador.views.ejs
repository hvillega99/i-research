<!DOCTYPE html>
<html lang="es">
<head>
    <%- include("templates/cabecera.templates.ejs")%>
    <link rel="stylesheet" type="text/css" href="/css/navbar.css">
    <link rel="stylesheet" type="text/css" href="/css/perfil.css">
    <title>Perfil de investigador</title>
</head>
<body>
    <%- include("templates/navbar.templates.ejs", {titulo: "Perfil de investigador"})%>
    <main>
        <div id="maincontainer">
            <section class="container p-3">
                <div class="row">
                    <h3><%= information.nombre%></h3>
                    <div class="col-md-6">

                        <% information.afiliaciones.unidades.forEach(item => { %>

                            <p class="badge rounded-pill bg-secondary">
                                <a href="/unidad/<%= item %>" style="text-decoration: none; color: white;">
                                    <%= item%>
                                </a>
                            </p>

                        <% }) %>

                        <% information.afiliaciones.centros.forEach(item => { %>

                            <p class="badge rounded-pill bg-secondary">
                                <a href="/centro/<%= item %>" style="text-decoration: none; color: white;">
                                    <%= item%>
                                </a>
                            </p>

                        <% }) %>

                        <p>Orcid: <%= information.orcid%> </p>
                        <p>Scopus id: <a id="scopusId" 
                            href="https://www.scopus.com/authid/detail.uri?authorId=<%= information.id %>"
                            target="_blank">
                            <%= information.id%>
                        </a></p>
                    </div>

                    <div class="col-md-6">
                        <h5>Áreas de investigación</h5>

                        <% information.areas.forEach(item => { %>

                            <p class="badge rounded-pill bg-secondary"><%= item%></p>

                        <% }) %>

                    </div>
                </div>
            </section>

            <div class="division"></div>

            <section class="container p-3">
                <div class="row"> 
                    <div class="col-md-2">
                        <h5>Métricas</h5>
                        <h5><%= information.documentos%></h5>
                        <p>Publicaciones</p>
                        <h5><%= information.citas%></h5>
                        <p>Citaciones</p>
                        <h5><%= information.hIndex%></h5>
                        <p>H-index</p>
                        <h5><%= information.h5Index%></h5>
                        <p>H5-index</p>
                        <h5><%= Math.round(information.fcwi,2)%></h5>
                        <p>FCWI</p>
                    </div>
                    <div class="col-md-5" data-toggle="tooltip" data-placement="top" title="Citaciones de las publicaciones de los últimos cinco años">
                        <canvas id="grafica-citaciones" width="400" height="300">
                        </canvas>
                    </div>
                    <div class="col-md-5" data-toggle="tooltip" data-placement="top" title="Cantidad de publicaciones de los últimos cinco años">
                        <canvas id="grafica-publicaciones" width="400" height="300">
                        </canvas>
                    </div>
                </div>
            </section>  

            
            <div class="container text-center">
                <ul class="nav nav-tabs nav-justified" id="myTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="investigadores-tab" data-bs-toggle="tab" data-bs-target="#investigadores" type="button" role="tab" aria-controls="home" aria-selected="true">Publicaciones</button>
                    </li>

                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#colaboradores" type="button" role="tab" aria-controls="profile" aria-selected="false">Colaboradores</button>
                    </li>
                    <!-- <li class="nav-item" role="presentation">
                        <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact" type="button" role="tab" aria-controls="contact" aria-selected="false">Colaboradores</button>
                    </li> -->

                </ul>
            </div>

            <div class="division"></div>

            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="investigadores" role="tabpanel" aria-labelledby="home-tab">

                    <section class="container p-3 text-center">
        
                        <div class="row justify-content-center">
                            <div class="col-md-8">
        
                                <table class="table">
                                    <thead>
                                      <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Titulo</th>
                                        <th scope="col">Citaciones</th>
                                      </tr>
                                    </thead>
                                    <tbody>
                                        <% i = 0 %>
                                        <% information.publicaciones.forEach(item => { %>
                                            <% i++ %>
                                            <tr>
                                                <th scope="row"><%= i %></th>
                                                <td id="titulo-<%= i %>">
                                                    <p><%= item[0]%></p>
                                                </td>
                                                <td id="citaciones-<%= i %>">
                                                    <p><%= item[1]%></p>
                                                </td>
                                            </tr>
                                        <% }) %>
                
                                    </tbody>
                                </table>
        
                            </div>
                        </div>
        
                    </section>

                </div>
                <div class="tab-pane fade" id="colaboradores" role="tabpanel" aria-labelledby="profile-tab">
                </div>
            </div>


        </div>     
    </main>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
    <script src="/js/graficos.js"></script>
</body>
</html>