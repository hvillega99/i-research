<!DOCTYPE html>
<html lang="es">
<head>
    <%- include("templates/cabecera.templates.ejs")%>
    <link rel="stylesheet" type="text/css" href="/css/navbar.css">
    <link rel="stylesheet" type="text/css" href="/css/perfil.css">
    <link rel="stylesheet" type="text/css" href="/css/table.css">
    <title>Unidad académica</title>
</head>
<body>
    <%- include("templates/navbar.templates.ejs", {titulo: "Unidad académica"})%>
    <main>
        <div id="maincontainer">
            <section class="container p-3">
                <div class="row align-items-center">
                    <div class="col-2">
                        <img src="<%= logo %>" class="w-100 h-100">
                    </div>
                    <div class="col-10">
                        <h2 id="uaId"><%= siglas %></h2>
                        <h3><%= nombre %></h3>
                    </div>
                </div>
            </section>

            <div class="division"></div>

            <section class="container p-3">
                <div class="row"> 
                    <div class="col-md-2">
                        <h5>Métricas</h5>
                        <h5><%= totalInvestigadores %></h5>
                        <p>Investigadores</p>
                        <h5><%= totalPublicaciones %></h5>
                        <p>Publicaciones de los investigadores</p>
                        <h5><%= totalCitaciones %></h5>
                        <p>Citaciones de los investigadores</p>
                    </div>
                    <div class="col-md-5">
                        <div id="info-citaciones"></div>
                        <canvas id="grafica-citaciones" width="400" height="300">
                        </canvas>
                    </div>
                    <div class="col-md-5">
                        <div id="info-publicaciones"></div>
                        <canvas id="grafica-publicaciones" width="400" height="300">
                        </canvas>
                    </div>
                </div>
            </section>

            <div class="container text-center">
                <ul class="nav nav-tabs nav-justified" id="myTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="investigadores-tab" data-bs-toggle="tab" data-bs-target="#investigadores" type="button" role="tab" aria-controls="home" aria-selected="true">Investigadores</button>
                    </li>
                    
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#proyectos" type="button" role="tab" aria-controls="contact" aria-selected="false">Proyectos</button>
                    </li>
                </ul>
            </div>

            <div class="division"></div>

            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="investigadores" role="tabpanel" aria-labelledby="home-tab">

                    <section class="container p-3 text-center">
        
                        <div class="row justify-content-center">
                            <div class="col-md-8">
        
                                <table class="table fixed_header">
                                    <thead>
                                      <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Autor</th>
                                        <th scope="col">Publicaciones</th>
                                        <th scope="col">Citaciones</th>
                                      </tr>
                                    </thead>
                                    <tbody>
                                        <% i = 0 %>
                                        <% investigadores.forEach(item => { %>
                                            <% i++ %>
                                            <tr>
                                                <th scope="row"><%= i %></th>
                                                <td id="<%= item.id %>" class="autor">
                                                    <a style="text-decoration: none; color: black;" 
                                                    href="/investigador/<%= item.id %>"> 
                                                        <%= item.autor %> 
                                                    </a>
                                                </td>
                                                <td id="publicaciones-<%= item.id %>">
                                                    <%= item.publicaciones %>
                                                </td>
                                                <td id="citaciones-<%= item.id %>">
                                                    <%= item.citaciones %>
                                                </td>
                                            </tr>
                                        <% }) %>
                
                                    </tbody>
                                </table>
        
                            </div>
                        </div>
        
                    </section>

                </div>

                <div class="tab-pane fade" id="proyectos" role="tabpanel" aria-labelledby="profile-tab">
                    <section class="container p-3">
        
                        <div class="row justify-content-center text-center">
                            <div class="col-md-6">   
                                <h5>Proyectos por año</h5>
                                <div id="temp-spinner">
                                    <div class="spinner-border" role="status">
                                        <span class="visually-hidden">Loading...</span>
                                    </div>
                                </div>
                                <canvas id="projects-by-year"></canvas>
                            </div>
                            <div class="col-md-6 d-flex justify-content-evenly">
                                <div>
                                    <h5>En ejecución</h5>
                                    <div id="num-current-projects">
                                        <div class="spinner-border" role="status">
                                            <span class="visually-hidden">Loading...</span>
                                        </div>
                                    </div>
                                </div>
                                
                                <div>
                                    <h5>Finalizados</h5>
                                    <div id="num-finished-projects">
                                        <div class="spinner-border" role="status">
                                            <span class="visually-hidden">Loading...</span>
                                        </div>
                                    </div>
                                </div>
                                
                                <div>
                                    <h5>Total</h5>
                                    <div id="num-total-projects">
                                        <div class="spinner-border" role="status">
                                            <span class="visually-hidden">Loading...</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row justify-content-start">   
                            
                            <h5 class="pt-2 title">En ejecución</h5>
                            <div class="division"></div>
                            <div class="pb-2" id='current-projects'>
                                <div class="spinner-border" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                            </div>       

                            <h5 class="pt-2 title">Finalizados</h5>
                            <div class="division"></div>
                            <div class="pb-2" id="finished-projects">
                                <div class="spinner-border" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                            </div>

                        </div>
        
                    </section>
                </div>
            </div>
        
        </div>  
    </main>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
    <script src="/js/graficosUA.js"></script>
    <script src="/js/proyectosUA.js"></script>
</body>
</html>